<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.utn.frsf.dam.isi.laboratorio02">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ListaProducto" />
        <activity android:name=".activity.NuevoPedido" />
        <activity android:name=".activity.HistorialPedido" />

        <receiver
            android:name=".receiver.EstadoPedidoReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio02.modelo.Pedido.ESTADO_ACEPTADO" />
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio02.modelo.Pedido.ESTADO_CANCELADO" />
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio02.modelo.Pedido.ESTADO_EN_PREPARACION" />
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio02.modelo.Pedido.ESTADO_LISTO" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <service
            android:name=".service.PrepararPedidoService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.RestoFirebaseInstanceIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".service.RestoMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activity.ConfiguracionActivity" />
        <activity android:name=".activity.CategoriaActivity" />
        <activity android:name=".activity.GestionProductoActivity"></activity>
    </application>

</manifest>